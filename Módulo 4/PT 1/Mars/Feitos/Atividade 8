.data
	saudacao: .ascii "ola. Por favor, forneca sua idade:	"  #ascii corresponde ao padrão americano de char
	saida: .asciiz "sua idade e:"
	
.text


li $v0, 4	#imprimir uma string
la $a0, saudacao #registradores do tipo "a" sao usandos quando tratamos de i/o de dados
syscall
li $v0, 5 #leitura de inteiro
syscall
move $t0, $v0 #valor fornecido esta em t0
li $v0, 4 #imprimir uma string
la $a0, saida
syscall
li $v0, 1 #imprimir um inteiro
move $a0, $t0 #move $t0 para $a0
syscall 