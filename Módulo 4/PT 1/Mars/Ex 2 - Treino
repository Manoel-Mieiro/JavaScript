.data
	Num: .asciiz "Favor, insira um inteiro:	"
	Par: .asciiz "O numero inserido e par"
	Impar: .asciiz "O numero inserido e impar"
.text
li $v0, 4
la $a0, Num
syscall

li $v0, 5
syscall
move $t0, $v0

li $s0, 2
li $s1, 0
div $t1, $t0, $s0

mfhi $t2

beq $t2, $s1, CondPar
li $v0, 4
la $a0, Impar
syscall
li $v0, 10
syscall
j CondPar

CondPar:
li $v0, 4
la $a0, Par
syscall
li $v0, 10
syscall